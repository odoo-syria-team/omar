<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <template id="portal_bbook_my_home" name="Portal My Home: products entries" inherit_id="portal.portal_my_home" priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="after">
            <a id="make_vendor" class="btn btn-secondary mt-5" href="/my/request/vendor/form" t-if="env.user.partner_id.partner_type not in ['vendor', 'request_vendor']">
                Subscribe as Vendor.
            </a>
            <a id="remove_vendor" class="btn btn-danger mt-5" href="/my/request/vendor/form" t-if="env.user.partner_id.partner_type == 'request_vendor'">
                Request sent, Press to undo subscription.
            </a>
            <a id="add_product" class="btn btn-primary mt-5" href="/my/products/-1" t-if="env.user.partner_id.partner_type == 'vendor' and not env.user.partner_id.product_ids">
                Add Your First Product!
            </a>
        </xpath>
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Products</t>
                <t t-set="url" t-value="'/my/products'"/>
                <t t-set="placeholder_count" t-value="'product_count'"/>
            </t>
        </xpath>
    </template>

</odoo>